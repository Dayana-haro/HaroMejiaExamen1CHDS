<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoacuarela"
    tools:context=".ActivityParalelogramo">

    <!-- Título de la actividad -->
    <TextView
        android:id="@+id/txtTituloParalelogramo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paralelogramo"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Imagen del Paralelogramo -->

    <!-- Campo para Base -->
    <ImageView
        android:id="@+id/imagenParalelogramo"
        android:layout_width="294dp"
        android:layout_height="204dp"
        android:layout_marginTop="96dp"
        android:src="@drawable/parelo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtBaseParalelogramo"
        android:layout_width="70dp"
        android:layout_height="59dp"
        android:layout_marginTop="16dp"
        android:hint="Base"
        android:inputType="numberDecimal"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imagenParalelogramo" />

    <!-- Campo para Altura -->
    <EditText
        android:id="@+id/edtAlturaParalelogramo"
        android:layout_width="84dp"
        android:layout_height="57dp"
        android:layout_marginTop="16dp"
        android:hint="Altura"
        android:inputType="numberDecimal"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtBaseParalelogramo" />

    <!-- Campo para Lado -->
    <EditText
        android:id="@+id/edtLadoParalelogramo"
        android:layout_width="81dp"
        android:layout_height="57dp"
        android:layout_marginTop="16dp"
        android:hint="Lado"
        android:inputType="numberDecimal"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtAlturaParalelogramo" />

    <!-- Botón para Calcular -->
    <Button
        android:id="@+id/bttCalcularParalelogramo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/edtLadoParalelogramo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Resultados -->
    <TextView
        android:id="@+id/txtResultadoParalelogramo"
        android:layout_width="289dp"
        android:layout_height="94dp"
        android:layout_marginTop="20dp"
        android:text="Resultado:"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bttCalcularParalelogramo" />

</androidx.constraintlayout.widget.ConstraintLayout>
